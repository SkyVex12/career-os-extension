{
  "manifest_version": 3,
  "name": "CareerOS Capture",
  "version": "0.2.1",
  "description": "Auto-open CareerOS panel on job pages; resilient to SPA re-renders.",
  "permissions": [
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*",
    "https://*.greenhouse.io/*",
    "https://job-boards.greenhouse.io/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*.greenhouse.io/*",
        "https://*/*",
        "https://job-boards.greenhouse.io/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}